<article class="movie">
  <%= image_for(@movie) %>
  <header>
    <h1>
      <%= @movie.title %>
    </h1>
  </header>
  <p>
    <%= @movie.description %>
  </p>
  <h3>Rating</h3>
  <p><%= @movie.rating %></p>
  <h3>Released On</h3>
  <p><%= @movie.released_on.to_s(:release_date) %></p>
  <h3>Cast</h3>
  <p><%= @movie.cast %></p>
  <h3>Director</h3>
  <%= @movie.director %>
  <h3>Duration</h3>
  <%= @movie.duration %>
  <h3>Total Gross</h3>
  <p><%= format_total_gross(@movie) %></p>
</article>

<%= link_to "Edit", edit_movie_path(@movie) %>
<%= link_to "Delete", movie_path(@movie), method: :delete, data: { confirm: 'Are you sure?' } %>