<article>
  <header>
    <h1>
      <%= @movie.title %>
    </h1>
  </header>
  <p>
    <%= @movie.description %>
  </p>
  <h3>Rating</h3>
  <p><%= @movie.rating %></p>
  <h3>Released On</h3>
  <p><%= @movie.released_on.to_s(:release_date) %></p>
  <h3>Total Gross</h3>
  <p><%= format_total_gross(@movie) %></p>
</article>

<%= link_to "Edit", edit_movie_path(@movie) %>
<%= link_to "All Movies", root_path %>